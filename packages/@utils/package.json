{
  "name": "@pokemon/utils",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "types": "./out/index.d.ts",
  "exports": {
    ".": {
      "import": "./out/index.js",
      "types": "./out/lib/index.d.ts",
      "default": "./out/index.js"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "bun": "1.3.5"
  },
  "packageManager": "bun@1.3.5",
  "scripts": {
    "show-typescript-config": "tsc -p tsconfig.json --showConfig",
    "check-types": "tsc -p tsconfig.json --noEmit --emitDeclarationOnly=false",
    "build-types": "tsc -p tsconfig.json",
    "bundle": "bun run build.ts",
    "build": "run-s bundle build-types",
    "clean": "rm -rf dist",
    "test": "bun test"
  },
  "dependencies": {
    "@pokemon/clients": "workspace:*",
    "@pokemon/configs": "workspace:*",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@pokemon/build": "workspace:*",
    "@types/bun": "1.3.5",
    "@types/node": "latest",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.0.0"
  }
}
