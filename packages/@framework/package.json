{
  "name": "@pokemon/framework",
  "version": "0.0.1",
  "description": "Minimal, performant, type-safe microservice framework for Bun",
  "type": "module",
  "module": "./dist/lib.js",
  "main": "./dist/lib.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "exports": {
    ".": {
      "import": "./dist/lib.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/lib.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "check-types": "tsc --noEmit",
    "test": "bun test",
    "bundle": "bun run build.ts",
    "build-types": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "prebuild": "run-s clean",
    "build": "run-p bundle build-types",
    "lint": "eslint src/"
  },
  "dependencies": {},
  "devDependencies": {
    "@pokemon/configs": "workspace:*",
    "@types/bun": "latest",
    "concurrently": "^9.2.1",
    "npm-run-all": "^4.1.5",
    "tsc-alias": "^1.8.16",
    "typescript": "5.5.4"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "framework",
    "microservice",
    "bun",
    "http",
    "router"
  ],
  "license": "MIT"
}
