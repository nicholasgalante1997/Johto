{
  "name": "@pokemon/clients",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "module": "./out/index.js",
  "browser": "./out/index.js",
  "types": "./out/lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./out/lib/index.d.ts",
      "node": "./out/index.js",
      "import": "./out/index.js",
      "default": "./out/index.js"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "bun": "1.3.5"
  },
  "packageManager": "bun@1.3.5",
  "scripts": {
    "build-types": "tsc -p tsconfig.json",
    "prebuild": "run-p clean",
    "build": "run-s bundle build-types",
    "bundle": "bun run build.ts",
    "check-types": "tsc -p tsconfig.json --noEmit",
    "clean": "rm -rf dist",
    "show-typescript-config": "tsc -p tsconfig.json --showConfig"
  },
  "dependencies": {
    "@pokemon/configs": "workspace:*"
  },
  "devDependencies": {
    "@pokemon/build": "workspace:*",
    "@types/bun": "1.3.5",
    "@types/node": "^22.9.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.0.0"
  }
}
